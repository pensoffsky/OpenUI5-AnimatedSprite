<core:View xmlns:core="sap.ui.core" 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns="sap.m"
	controllerName="view.Main" 
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:l="sap.ui.layout"
	xmlns:custom="view"
	>
	<Page title="Animated Sprite">
		<content>
			<custom:AnimatedSprite src="view/sprite.png"
								   width="32px"
								   height="32px"
								   animateOnce="true"
								   repeat="false"
								   stepsX="10"
								   stepsY="10"
								   delayMs="66"
								   id="idAnimatedSprite"
								   press="onSpritePress"
								   animationStarted="animationStarted"
								   animationFinished="animationFinished"
								   />
			<CheckBox text="Repeat" selected="false" select="onRepeat" />
			<Button text="play all" press="onPlay" />
			<Button text="stop" press="onStop" />
			
			<Button text="play1" press="onPlay1" />
			<Button text="play2" press="onPlay2" />
			<Button text="play3" press="onPlay3" />
			<Button text="play4" press="onPlay4" />
			
		</content>
	</Page>
</core:View>